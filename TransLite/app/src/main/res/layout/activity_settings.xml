<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kristavanderhorst.translite.SettingsActivity">

    <GridLayout
        android:layout_width="366dp"
        android:layout_height="551dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Spinner
            android:id="@+id/inLanguageSpinner"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:layout_column="1"
            android:layout_row="0" />

        <Spinner
            android:id="@+id/outLanguageSpinner"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_column="1"
            android:layout_row="1" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:fontFamily="@font/roboto_thin"
            android:text="Transcribe"
            android:textAlignment="viewEnd"
            tools:layout_editor_absoluteX="402dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:fontFamily="@font/roboto_thin"
            android:text="Input Language"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:fontFamily="@font/roboto_thin"
            android:text="Output Language"
            android:textSize="24sp" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>
